generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  name         String
  email        String  @unique
  password     String
  isAdmin      Boolean @default(false)
  joinedEvent  Boolean @default(false)
  message      String?
  matches1     Match[] @relation("ParticipantOne")
  matches2     Match[] @relation("ParticipantTwo")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Match {
  id                  Int     @id @default(autoincrement())
  participant_one_id  Int
  participant_two_id  Int
  ParticipantOne      User    @relation("ParticipantOne", fields: [participant_one_id], references: [id])
  ParticipantTwo      User    @relation("ParticipantTwo", fields: [participant_two_id], references: [id])
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([participant_one_id])
  @@index([participant_two_id])
  @@map("matches")
}
